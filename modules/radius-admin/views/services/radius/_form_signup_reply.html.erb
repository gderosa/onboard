<%#-*- coding: UTF-8 -*-%>

  <table class="radsignupform">
    <tbody>
      <tr>
        <th scope="row">Reply-Message</th> 
        <td>
          <input 
              type="text" 
              name="reply[Reply-Message]" 
              value="<%= configuration['reply']['Reply-Message'] %>"/>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Session-Timeout
          <div class="optinfo">Max connection time (seconds)</div>
        </th> 
        <td>
          <input 
              type="text" 
              name="reply[Session-Timeout]"
              value="<%= configuration['reply']['Session-Timeout'] %>"/>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Idle-Timeout
          <div class="optinfo">Max inactivity time (seconds)</div>
        </th> 
        <td>
          <input 
              type="text" 
              name="reply[Idle-Timeout]"
              value="<%= configuration['reply']['Idle-Timeout'] %>"/>
        </td>
      </tr>
      <tr>
        <th scope="row">
          WISPr-Bandwidth-Max-Down
          <div class="optinfo">Max Downstream bandwidth (bits/sec)</div>
        </th>
        <td>
          <input 
              type="text" 
              name="reply[WISPr-Bandwidth-Max-Down]"
              value="<%= configuration['reply']['WISPr-Bandwidth-Max-Down'] %>"/>
        </td>
      </tr>
      <tr>
        <th scope="row">
          WISPr-Bandwidth-Max-Up
          <div class="optinfo">Max Upstream bandwidth (bits/sec)</div>
        </th>
        <td>
          <input 
              type="text" 
              name="reply[WISPr-Bandwidth-Max-Up]"
              value="<%= configuration['reply']['WISPr-Bandwidth-Max-Up'] %>"/>
        </td>
      </tr>
    </tbody>
  </table>
