<%#-*- coding: UTF-8 -*-%>

<%
  group ||= nil
%>

  <!-- no need to create a "radgroupform" class... -->
  <table class="raduserform">
    <tbody>
      <tr>
        <th scope="row">Reply-Message</th>
        <td>
          <input
              type="text"
              name="reply[Reply-Message]"
              value="<%= group.attribute :reply, 'Reply-Message' if group %>"/>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Session-Timeout
          <div class="optinfo">Max connection time (seconds)</div>
        </th>
        <td>
          <input
              type="text"
              name="reply[Session-Timeout]"
              value="<%= group.attribute :reply, 'Session-Timeout' if group %>"/>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Idle-Timeout
          <div class="optinfo">Max inactivity time (seconds)</div>
        </th>
        <td>
          <input
              type="text"
              name="reply[Idle-Timeout]"
              value="<%= group.attribute :reply, 'Idle-Timeout' if group %>"/>
        </td>
      </tr>
      <tr>
        <th scope="row">
          WISPr-Bandwidth-Max-Down
          <div class="optinfo">Max Downstream bandwidth (bits/sec)</div>
        </th>
        <td>
          <input
              type="text"
              name="reply[WISPr-Bandwidth-Max-Down]"
              value="<%= group.attribute :reply, 'WISPr-Bandwidth-Max-Down' if
                  group %>"/>
        </td>
      </tr>
      <tr>
        <th scope="row">
          WISPr-Bandwidth-Max-Up
          <div class="optinfo">Max Upstream bandwidth (bits/sec)</div>
        </th>
        <td>
          <input
              type="text"
              name="reply[WISPr-Bandwidth-Max-Up]"
              value="<%= group.attribute :reply, 'WISPr-Bandwidth-Max-Up' if
                  group %>"/>
        </td>
      </tr>
    </tbody>
  </table>
