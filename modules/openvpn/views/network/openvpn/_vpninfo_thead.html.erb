<%#
  locals:
    actions:
    common_name_description:
    show_actions_column: boolean or an alternate String
    multi_pkis:
%>

<%
  show_actions_column     ||= ''
  common_name_description ||= ''

  if show_actions_column == true
    show_actions_column = 'Actions'
  end

  multi_pkis              ||= false
%>

    <tr>
      <th rowspan="3" colspan="3">
        <%= show_actions_column %>
      </th>
      <th rowspan="3">
        Mode
      </th>
      <th rowspan="3" title="<%= common_name_description %>">
        &ldquo;Common Name&rdquo;
      </th>
      <% if multi_pkis %>
      <th rowspan="3">
        PKI
      </th>
      <% end %>
      <th colspan="5">
        Real
      </th>
      <th colspan="3">
        Virtual
      </th>
      <th rowspan="3">LZO<br/>Compression?</th>
    </tr>
    <tr>
      <th colspan="2">
        Local
      </th>
      <th colspan="2">
        Remote
      </th>
      <th rowspan="2">
        Protocol
      </th>
      <th rowspan="2">
        Local IP Address
      </th>
      <th rowspan="2">
        Destinations
      </th>
      <th rowspan="2">
        Device
      </th>
    </tr>
    <tr>
      <th>Host</th>
      <th>Port</th>
      <th>Host</th>
      <th>Port</th>
    </tr>

