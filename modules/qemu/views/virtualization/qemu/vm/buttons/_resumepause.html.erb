            <%= 
              if vm.running?
                if vm.paused?
                  action_button(
                    :start, 
                    :name     => 'resume[uuid]', 
                    :title    => 'Resume from Pause',
                    :value    => vm.uuid,
                    :disabled => (vm.snapshotting? or not vm.monitor.works?)
                  )
                else
                  action_button(
                    :pause, 
                    :name     => 'pause[uuid]', 
                    :title    => 'Pause',
                    :value    => vm.uuid,
                    :disabled => (vm.snapshotting? or not vm.monitor.works?)
                  ) 
                end
              else
                action_button(
                  :start_paused, 
                  :name     => 'start_paused[uuid]', 
                  :title    => 
'Start paused (so you have time to open a VNC client etc.)',
                  :value    => vm.uuid,
                  :disabled => vm.snapshotting?
                ) 
              end 
            %>

