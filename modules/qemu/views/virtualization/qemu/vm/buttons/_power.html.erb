            <%=
              if vm.running?
                action_button(
                  :shutdown,
                  :name     => 'powerdown[uuid]',
                  :title    =>
'ACPI Shutdown (may require some time to cleanly power off)',
                  :value    => vm.uuid,
                  :disabled => (vm.snapshotting? or not vm.monitor.works?)
                )
              else
                action_button(
                  :start,
                  :name     => 'start[uuid]',
                  :title    => 'Start',
                  :value    => vm.uuid,
                  :disabled => vm.snapshotting?
                )
              end
            %>
